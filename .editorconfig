root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.nix]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[git-agecrypt.toml]
indent_style = space
indent_size = 4

[justfile,*.just]
indent_style = space
indent_size = 4
